<% include ./partials/header %> 

<div class =" ui main text container segment">
    <div class = "ui huge header">Edit <%= blog.tital %></div>
    <form class = "ui form" action = "/blogs/<%= blog._id %>?_method=PUT" method = "POST">
        <div class = "field">
            <lable>Title</lable>
            <input type = "text" name = "blog[tital]" value = "<%= blog.tital %>">
        </div>
        <div class = "field">
            <lable>Image</lable>
            <input type = "text" name = "blog[image]" value = "<%= blog.image %>">
        </div>
        <div class = "field">
            <lable>Blog Content</lable>
            <textarea name = "blog[body]" required><%= blog.body %></textarea>
        </div>
        <input class = "ui violet big basic button" type = "submit">
    </form>
</div>


<% include ./partials/footer %> 
